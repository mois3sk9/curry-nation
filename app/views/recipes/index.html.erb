<h1>Listing recipes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Cooking time</th>
      <th>Difficulty level</th>
      <th>Food type</th>
      <th>Food preference id integer</th>
      <th>Cuisine</th>
      <th>Ingredients</th>
      <th>Procedure</th>
      <th>Food preferences</th>
      <th>Food type</th>
      <th>Cuisine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.cooking_time %></td>
        <td><%= recipe.difficulty_level %></td>
        <td><%= recipe.food_type.name %></td>
        <td><%= recipe.food_preference.name %></td>
        <td><%= recipe.cuisine.name %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.procedure %></td>
        <td><%= link_to 'Show', recipe, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe), :class => "btn btn-success" %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Estas seguro de elimnar el registro?' }, :class => 'btn-danger btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

